{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/build/LiVerse.dll",
      "args": ["appDataDir=\"/etc/ceira\""],
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Launch Release",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-release",
      "program": "${workspaceFolder}/release/LiVerse.dll",
      "args": ["appDataDir=\"/etc/ceira\""],
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
